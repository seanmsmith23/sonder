<div class="row">
  <div class="memorial-cover-photo">
  </div>

  <div class="memorial-name-dates cntr-txt">
    <p>
      <span id="name">
        <%= @memorial.name %><br>
      </span>
      <span id="dates">
        <%= @memorial.born.strftime("%b %l, %Y ")  %> - <%= @memorial.died.strftime("%b %l, %Y ") %>
      </span>
    </p>
  </div>
</div>

<div class="full-width">
  <div class="memorial-content">

    <div class="memorial-content-buttons">
      <ul>
        <li><button id="new-story-button">Story</button></li>
        <li><button id="new-post-button">Post</button></li>
        <li><button>Photo</button></li>
      </ul>
    </div>

    <%= render 'memorials/content_forms/new_story' %>
    <%= render 'memorials/content_forms/new_post' %>



    <div class="card-column-one"></div>
    <div class="card-column-two"></div>
    <div class="card-column-three"></div>

    <% @stories.each_with_index do |story, index| %>
      <% if index % 3 == 0 %>
        <script>
          $('.card-column-one').append("<%= j render partial: 'card', locals: {
                story_text: story.story,
                name: story.user.name,
                story_id: story.id,
                memorial_id: @memorial.id,
                likes: @storylikes.where(story_id: story.id)
              } %>");
        </script>
      <% elsif index % 3 == 1 %>
        <script>
          $('.card-column-two').append("<%= j render partial: 'card', locals: {
                story_text: story.story,
                name: story.user.name,
                story_id: story.id,
                memorial_id: @memorial.id,
                likes: @storylikes.where(story_id: story.id)
              } %>");
        </script>
      <% elsif index % 3 == 2 %>
        <script>
          $('.card-column-three').append("<%= j render partial: 'card', locals: {
                story_text: story.story,
                name: story.user.name,
                story_id: story.id,
                memorial_id: @memorial.id,
                likes: @storylikes.where(story_id: story.id)
              } %>");
        </script>
      <% end %>
    <% end %>
  </div>
</div>