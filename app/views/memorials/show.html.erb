<div class="row">
  <div class="memorial-cover-photo">
  </div>

  <div class="memorial-name-dates cntr-txt">
    <p>
      <span id="name">
        <%= @memorial_page.memorial.name %><br>
      </span>
      <span id="dates">
        <%= @memorial_page.memorial.born.strftime("%b %l, %Y ") %>
        - <%= @memorial_page.memorial.died.strftime("%b %l, %Y ") %>
      </span>
    </p>
  </div>
</div>

<div class="full-width">
  <div class="memorial-content">

    <div class="memorial-content-buttons scrollto">
      <ul>
        <li>
          <button id="new-story-button">Story</button>
        </li>
        <li>
          <button id="new-post-button">Post</button>
        </li>
        <li>
          <button>Photo</button>
        </li>
      </ul>
    </div>

    <%= render 'memorials/content_forms/new_story' %>
    <%= render 'memorials/content_forms/new_post' %>
    <%= render 'memorials/content_forms/new_image' %>

    <div class="three-columns">
      <div class="three-column-one"></div>
      <div class="three-column-two"></div>
      <div class="three-column-three"></div>
    </div>

    <div class="columns-container">
      <% @memorial_page.content.each_with_index do |content, index| %>

        <% if content.class == Story %>
          <% locals = story_locals(content.story, content.user.name, content.id, @memorial_page.memorial.id, content.storylikes) %>
        <% elsif content.class == Post %>
          <% locals = post_locals(content.content, content.title, content.user.name, content.id, @memorial_page.memorial.id, []) %>
        <% end %>

        <% if index % 3 == 0 && content.class == Story %>
          <script>
            $('.three-column-one').append("<%= j render partial: 'memorials/cards/story_card', locals: locals %>");
          </script>
        <% elsif index % 3 == 1 && content.class == Story  %>
          <script>
            $('.three-column-two').append("<%= j render partial: 'memorials/cards/story_card', locals: locals %>");
          </script>
        <% elsif index % 3 == 2 && content.class == Story  %>
          <script>
            $('.three-column-three').append("<%= j render partial: 'memorials/cards/story_card', locals: locals %>");
          </script>
        <% end %>

        <% if index % 3 == 0 && content.class == Post %>
          <script>
            $('.three-column-one').append("<%= j render partial: 'memorials/cards/post_card', locals: locals %>");
          </script>
        <% elsif index % 3 == 1 && content.class == Post  %>
          <script>
            $('.three-column-two').append("<%= j render partial: 'memorials/cards/post_card', locals: locals %>");
          </script>
        <% elsif index % 3 == 2 && content.class == Post  %>
          <script>
            $('.three-column-three').append("<%= j render partial: 'memorials/cards/post_card', locals: locals %>");
          </script>
        <% end %>

      <% end %>
    </div>
  </div>
</div>