<h1>Remembering <%= @memorial.name %></h1>
<h3><%= @memorial.born %> - <%= @memorial.died %></h3>

<h5>Add a Comment</h5>

<%= form_for @comment, url: memorial_comments_path(memorial_id: @memorial.id) do |f| %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <%= f.submit "Add Comment" %>
<% end %>