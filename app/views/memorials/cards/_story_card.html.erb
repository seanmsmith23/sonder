<div class="card" data-id="<%= story.id %>" data-memorial-id="<%= story.memorial.id %>" data-like-count="<%= story.likes.count %>"  data-type="Story">
  <div class="card-header">
    <%= story.user.name %>
  </div>
  <div class="card-copy">
    <%= simple_format story.story %>
  </div>
  <div class="card-stats">
    <ul>
      <% if story.likes.count > 0 %>
        <li id="liked">
      <% else %>
        <li>
      <% end %>
      <%= form_tag do %>
        <%= image_submit_tag("heart-plus-icon-red.png", class: "unlike") %>
      <% end %>
      <%= form_tag do %>
        <%= image_submit_tag("heart-plus-icon.png", class: "favorite") %>
      <% end %>
      </li>
      <li class="like-count" data-likes="<%= story.likes.count %>"><%= story.likes.count %></li>
    </ul>
  </div>
</div>