<div class="full-width">
  <h1 class="cntr-txt">Edit Your Post</h1>
  <%= form_for @post, url: memorial_post_path(memorial_id: @post.memorial.id) do |f| %>
    <%= f.label :post %>
    <%= f.text_field :title%>
    <div class="add-post-input-container">
      <%= f.text_area :content, class: "post-input", id: "add-post-input" %>
    </div>

    <p id="post-char-count"></p>

    <%= f.submit "Edit Post", id: "add-post-button" %>
  <% end %>
</div>

