<div class="full-width">

  <section>
    <article class="eight-wide shift-two">
      <div class="login-header">
        <h1>Sonder</h1>

        <h3>A community for remembering the ones we've lost</h3>
      </div>
    </article>
  </section>

  <section>
    <article class="four-wide shift-four" id="registration-container">

      <div id="sign-in-form">
        <%= form_for @user, url: sessions_path do |f| %>
          <%= f.label :email %>
          <%= f.email_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>
          <%= f.submit "Sign In" %>
        <% end %>

        <div class="signed-up shift-three">
          <h8>Haven't registered yet?</h8>
        </div>
        <div class="signed-up shift-four">
          <button id="register-button">Register</button>
        </div>
      </div>

      <div id="registration-form">

        <% if @user.errors.any? %>
          <div>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li class="error-msg"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_for @user, url: sessions_path, remote: true, :authenticity_token => true do |f| %>

          <%= f.label :first_name, "First Name" %>
          <%= f.text_field :first_name %>

          <%= f.label :last_name, "Last Name" %>
          <%= f.text_field :last_name %>

          <%= f.label :email %>
          <%= f.email_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.label :password_confirm, "Confirm Password" %>
          <%= f.password_field :password_confirm %>

          <%= f.submit "Sign Up" %>

          <% end %>
      </div>

    </article>
  </section>

  <section >
    <article class="two-wide shift-five" id="options-container">
      <div class="signed-up center-text" id="signed-up">
        <h8>Already signed up?</h8>
      </div>
    </article>
  </section>

  <section>
    <article class="two-wide shift-five signed-up">
      <div class="shift-two">
        <button id="sign-in-button">Sign In</button>
      </div>
    </article>
  </section>

</div>